# Togwaarde - TOG Baby Clothing Calculator
# Environment Configuration
# Copy this to .env.local and fill in your values

# ============================================
# DATABASE (Optional, for future admin features)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/togwaarde"

# ============================================
# REDIS (REQUIRED for rate limiting)
# ============================================
# Local development:
REDIS_URL="redis://localhost:6379"

# CapRover self-hosted:
# REDIS_URL="redis://srv-captain--redis:6379"

# Upstash (serverless):
# REDIS_URL="https://your-endpoint.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your_token_here"

# ============================================
# AUTHENTICATION
# ============================================
# JWT Secret for admin authentication
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-random-secret-key-minimum-32-characters-here"

# ============================================
# EMAILJS (for contact form)
# ============================================
# Get from: https://www.emailjs.com/
# Account -> API Keys for public/private keys
# Email Services for service ID
# Email Templates for template ID

NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here
NEXT_PUBLIC_EMAILJS_SERVICE_ID=service_xxxxx
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=template_xxxxx
EMAILJS_PRIVATE_KEY=your_private_key_here

# ============================================
# WEATHER API (for temperature recommendations)
# ============================================
# Get from: https://openweathermap.org/api
# Free tier: 60 calls/minute, 1,000,000 calls/month

NEXT_PUBLIC_WEATHER_API_KEY=your_api_key_here
NEXT_PUBLIC_WEATHER_API_ENDPOINT=https://api.openweathermap.org/data/2.5

# ============================================
# RECAPTCHA (optional, for spam protection)
# ============================================
# Get from: https://www.google.com/recaptcha/admin
# Completely free, no credit card needed

NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here

# ============================================
# APPLICATION SETTINGS
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_CONTACT_EMAIL="info@togwaarde.nl"